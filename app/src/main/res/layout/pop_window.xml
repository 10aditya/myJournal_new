<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_popup"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#00ff0000"
                android:text="HAPPY"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button"
                android:background="#00ff0000"
                android:text="SAD"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button19"
                android:background="#00ff0000"
                android:text="ANGRY"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/button3"
                android:background="#00ff0000"
                android:text="BLISSFULL"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button4"
                android:background="#00ff0000"
                android:text="EXCITED"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button5"
                android:background="#00ff0000"
                android:text="ALONE"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button6"
                android:background="#00ff0000"
                android:text="STRESSED"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button7"
                android:background="#00ff0000"
                android:text="SHOCKED"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button8"
                android:background="#00ff0000"
                android:text="APOLOGETIC"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button9"
                android:background="#00ff0000"
                android:text="GUILTY"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button10"
                android:background="#00ff0000"
                android:text="SATISFIED"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button11"
                android:background="#00ff0000"
                android:text="CRAZY"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button12"
                android:background="#00ff0000"
                android:text="BORED"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button13"
                android:background="#00ff0000"
                android:text="CUSTOM"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/button2"
                android:background="#00ff0000"
                android:text="ROMANTIC"
                android:textAlignment="viewStart"
                android:textColor="#ffffff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button19"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button2"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button3"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button4"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button5"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button6"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button7"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button8"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button9"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button10"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button11"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button12"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button13"
                android:background="@color/colorAccent"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button14"
                android:background="@color/colorAccent"></View>


        </RelativeLayout>
    </ScrollView>
</LinearLayout>