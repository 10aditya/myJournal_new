<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_popup"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#000000"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >


    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:textColor="#ffffff"
        android:text="HAPPY"
        android:id="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:text="SAD"
        android:id="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button" />

    <Button
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:text="ANGRY"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true" />

    <Button
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:text="BLISSFULL"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true" />

    <Button
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:text="EXITED"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true" />

    <Button
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:text="ALONE"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true" />

    <Button
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:text="STRESSED"
        android:id="@+id/button7"
        android:layout_below="@+id/button6"
        android:layout_alignParentLeft="true" />

    <Button
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:text="SHOCKED"
        android:id="@+id/button8"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true" />

    <Button
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:text="APOLOGETIC"
        android:id="@+id/button9"
        android:layout_below="@+id/button8"
        android:layout_alignParentLeft="true" />

    <Button
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:text="GUITY"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_alignParentLeft="true" />

    <Button
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:text="SATISFIED"
        android:id="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_alignParentLeft="true" />

    <Button
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:text="CRAZY"
        android:id="@+id/button12"
        android:layout_below="@+id/button11"
        android:layout_alignParentLeft="true" />

    <Button
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:text="BORED"
        android:id="@+id/button13"
        android:layout_below="@+id/button12"
        android:layout_alignParentLeft="true" />

    <Button
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:background="#00ff0000"
        android:text="CUSTOM"
        android:id="@+id/button14"
        android:layout_below="@+id/button13"
        android:layout_alignParentLeft="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button2"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button3"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button4"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button5"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button6"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button7"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button8"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button9"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button10"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button11"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button12"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button13"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button14"></View>


</RelativeLayout>
</ScrollView>
</LinearLayout>